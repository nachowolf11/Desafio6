html 
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        link(rel="stylesheet", href="../public/style.css")
        title Lista de Productos
    body(class="container-fluid")
        div(class="row g-0")
            form(action="/api/productos" method="post" id="form")
                fieldset(id="crearProducto" style="width: 25%; display: flex; flex-direction: column;")
                    legend Producto 
                    input(class="mb-2" type="text" id="title" placeholder="TÃ­tulo")
                    input(class="mb-2" type="number" id="price" placeholder="Precio")
                    input(class="mb-2" type="text" id="thumbnail" placeholder="URL Imagen")
                    button(class="mb-2 btn btn-info" id="sendForm") Agregar
        div(class="bg-secondary mt-3 pb-3" style="--bs-bg-opacity: .2; width:95%")
            div(class="row g-0")
                div(class="d-flex justify-content-center fw-bold text-primary fs-3 mt-5") Lista de Productos
            div(class="row m-5 bg-dark text-light" id="items")
                div(class="row g-0")
                    div(class="col-4 border d-flex fw-bold justify-content-center") Nombre
                    div(class="col-4 border d-flex fw-bold justify-content-center") Precio
                    div(class="col-4 border d-flex fw-bold justify-content-center") Foto
                //- each prod in productos 
                //-     div(class="row g-0")
                //-         div(class="col-4 border-bottom border-end bg-secondary border-start d-flex justify-content-center") #{prod.producto.title}
                //-         div(class="col-4 border-bottom border-end bg-secondary d-flex justify-content-center") #{prod.producto.price}
                //-         div(class="col-4 border-bottom border-end bg-secondary d-flex justify-content-center") #{prod.producto.thumbnail}
            //- div(class="d-flex justify-content-center fw-bold text-dark fs-3 pb-5") No hay productos
        div(class="row")
            div(class="fw-bold text-primary fs-3 mt-5 mb-3" id="emptyList") Chat de Mensajes
            div(class="mb-2")
                input(type="mail" name="mail" id="mail" placeholder="Email")
            div(id="mensajes" class="mb-2")
            div(class="input-group")
                input(type="text" class="form-control" name="mensaje" id="mensaje" placeholder="Ingresa tu mensaje")
                button(id="enviarMsj" class="btn btn-info btn-sm ms-2") Enviar 

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")
